@model Expense_Tracker.ViewModels.expenseCategoryViewModel

@{
    ViewData["Title"] = "Update";
}

<div class="px-lg-5 border rounded-2 mx-lg-5 my-lg-5 small">
    <form class="row g-3 pb-3 px-lg-5 mx-lg-5 my-lg-2" method="post">
        <div>
            <h2 class="text-primary">Update Expense Category</h2>
            <hr />
        </div>
        <input asp-for="categoryID" hidden />

        <div class="mb-3">
            <label asp-for="categoryName"></label>
            <input asp-for="categoryName" class="form-control" />
            <span asp-validation-for="categoryName" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-between">
            <a asp-controller="expenseCategory" asp-action="Index" class="btn btn-secondary" style="width:150px">
                Go back
            </a>
            <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        </div>
    </form>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }

