@model Expense_Tracker.ViewModels.expensesViewModel

@{
    ViewData["Title"] = "Create";
}

<body>
    <div class="px-lg-5 border rounded-2 mx-lg-5 my-lg-5 small">
        <form class="row g-3 pb-3 px-lg-5 mx-lg-5 my-lg-2" method="post">
            <div>
                <h2 class="text-primary">Add New Expense Record</h2>
                <hr />
            </div>

            <div class="mb-6">
                <label asp-for="categoryName"></label>
                <select name="categoryId" class="form-control" asp-items="@ViewBag.categorylist">
                    <option>
                        Select Category
                    </option>
                </select>
                <span asp-validation-for="categoryId" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Amount"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Date"></label>
                <input asp-for="Date" type="date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-controller="Expenses" asp-action="Index" class="btn btn-secondary" style="width:150px">
                    Go back
                </a>
                <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
            </div>
        </form>
    </div>
</body>



@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

